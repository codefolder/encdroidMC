<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.mrpdaemon.android.encdroidmc.PinCodeActivity" >

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="bottom" >

    
        	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
			<EditText
		android:id="@+id/pinCode"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:scrollHorizontally="true"
		android:gravity="fill_horizontal" />
	</LinearLayout>
    
    
    	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
		<Button android:id="@+id/pin1"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="1"
			android:layout_weight=".33"
			android:onClick="clic1"/>
		<Button android:id="@+id/pin2"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="2"
			android:layout_weight=".33"
			android:onClick="clic2"/>
		<Button android:id="@+id/pin3"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="3"
			android:layout_weight=".33"
			android:onClick="clic3"/>
	</LinearLayout>
  
    	
    	
    	
    	    	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
		<Button android:id="@+id/pin4"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="4"
			android:layout_weight=".33"
			android:onClick="clic4"/>
		<Button android:id="@+id/pin5"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="5"
			android:layout_weight=".33"
			android:onClick="clic5"/>
		<Button android:id="@+id/pin6"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="6"
			android:layout_weight=".33"
			android:onClick="clic6"/>
	</LinearLayout>
	
    	    	
    	    	
    	    	
    	    	
    	    	    	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
		<Button android:id="@+id/pin7"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="7"
			android:layout_weight=".33"
			android:onClick="clic7"/>
		<Button android:id="@+id/pin8"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="8"
			android:layout_weight=".33"
			android:onClick="clic8"/>
		<Button android:id="@+id/pin9"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="9"
			android:layout_weight=".33"
			android:onClick="clic9"/>
	</LinearLayout>
	
    	    	    	
    	    	    	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
		<Button android:id="@+id/pinClear"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="Clear"
			android:layout_weight=".33"
			android:onClick="clicClear"/>
		<Button android:id="@+id/pin0"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="0"
			android:layout_weight=".33"
			android:onClick="clic0"/>
		<Button android:id="@+id/pinok"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="OK"
			android:layout_weight=".33"
			android:onClick="clicok"/>
	</LinearLayout>
	
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
		<Button android:id="@+id/removePin"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:text="Remove PIN code"
			android:layout_weight=".33"
			android:onClick="removePin"/>

	</LinearLayout>
</LinearLayout>

</RelativeLayout>
